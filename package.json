{
  "name": "@nafeu/topic-weaver",
  "version": "0.1.0",
  "description": "Generate random topic combinations from hierarchical concept maps.",
  "keywords": [
    "generate",
    "random",
    "combinations",
    "heirarchy",
    "tree"
  ],
  "author": "nafeu",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "test": "jest",
    "semantic-release": "semantic-release",
    "prepack": "npm run build",
    "lint": "tsc -p ./configs/tsconfig.base.json --noEmit && eslint *.ts tests/**/*.ts",
    "format": "prettier --write *.ts ./**/*.ts"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nafeu/topic-weaver.git"
  },
  "bugs": {
    "url": "https://github.com/nafeu/topic-weaver/issues"
  },
  "homepage": "https://github.com/nafeu/topic-weaver#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "license": "MIT"
}
